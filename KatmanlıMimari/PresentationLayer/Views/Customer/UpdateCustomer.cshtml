@model EntityLayer.Concrete.Customer
@{
    ViewData["Title"] = "UpdateCustomer";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}
<form method="post">

    @Html.Label("Müşteri ID")
    @Html.TextBoxFor(x=>x.Id,new{@class="form-control"})
    <br />
    @Html.Label("Müşteri Adı")
    @Html.TextBoxFor(x=>x.Name,new{@class="form-control"})
    <br />
    @Html.Label("Müşteri Email")
    @Html.TextBoxFor(x=>x.Email,new{@class="form-control"})
    <br />
    @Html.Label("Müşteri Adres")
    @Html.TextBoxFor(x=>x.Adress,new{@class="form-control"})
    <br />

    <button class="btn-outline-primary">Müşteri Güncelle</button>

</form>


